<%- model_class = Recipe -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human %> Ingredients: <strong><%= @recipe.name %></strong>
  &nbsp;
  <%= link_to 'Back to All Recipes', recipes_path, :class => 'btn btn-mini' %>

  <%= link_to 'See All Ingredients', ingredients_path, :class => 'btn btn-mini' %></h2>
</div>

<%= render :partial => 'shared/ingredient', :collection => @recipe.ingredients, :as => :ingredient %>

<div class="span12 form-actions">

  <div class="btn-group">
    <button class="btn btn-primary">Create New</button>
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Kitchen', new_kitchen_path %></li>
      <li class="divider"></li>
      <li><%= link_to 'Recipe', new_recipe_path %></li>
      <li class="divider"></li>
      <li><%= link_to 'Ingredient', new_ingredient_path %></li>
    </ul>
  </div>
  &nbsp;
  <div class="btn-group">
    <button class="btn">See All</button>
    <button class="btn dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Kitchens', kitchens_path %></li>
      <li class="divider"></li>
      <li><%= link_to 'Recipes', recipes_path %></li>
      <li class="divider"></li>
      <li>  <%= link_to 'Ingredients', ingredients_path %></li>
    </ul>
  </div>

</div>