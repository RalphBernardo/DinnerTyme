<%- model_class = Kitchen -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %>&nbsp; &nbsp;

  <div class="btn-group">
    <button class="btn btn-primary">Create New</button>
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Kitchen', new_kitchen_path %></li>
      <li class="divider"></li>
      <li><%= link_to 'Recipe', new_recipe_path %></li>
      <li class="divider"></li>
      <li><%= link_to 'Ingredient', new_ingredient_path %></li>
    </ul>
  </div></h2>
</div>

<% @kitchens.each do |kitchen| %>
  <div class = "kitchen_container">
    <h4><%= kitchen.name %></h4>

    <h4><%= link_to 'Show Recipes', kitchen, :class => 'btn btn-primary' %></h4>

    <%= image_tag(kitchen.photo.thumb.url) %>

    <h5><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_kitchen_path(kitchen), :class => 'btn btn-mini btn-success' %>&nbsp;

        <%= link_to 'Delete', kitchen_path(kitchen), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %></h5>
  </div>
<% end %>

<div class="clearfix"></div>

<div class="row-fluid form-actions">
  <%= link_to 'Create New Kitchen', new_kitchen_path, :class => 'btn btn-primary' %>
  &nbsp;&nbsp;
  <div class="btn-group">
    <button class="btn">See All</button>
    <button class="btn dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'Recipes', recipes_path %></li>
      <li class="divider"></li>
      <li><%= link_to 'Ingredients', ingredients_path %></li>
    </ul>
  </div>
</div>