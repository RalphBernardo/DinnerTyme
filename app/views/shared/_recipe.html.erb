<div class = "recipe_container span11">
    <sidebar>
      <h4><%= link_to 'Show Ingredients', recipe, :class => 'btn btn-primary' %></h4>

      <div class="image_container"><%= image_tag(recipe.photo.thumb.url) %></div>

    </sidebar>

  <h3><%= recipe.name %></h3>
  <br>
  <strong>Chef:</strong> <%= link_to recipe.kitchen.name, kitchen_path(recipe.kitchen) %> |
  <strong>Serves:</strong> <%= recipe.serves %> |
  <strong>Rating:</strong> <%= recipe.rating %>
  <br><br>
  <%= recipe.steps.html_safe %>
  <h5><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_recipe_path(recipe), :class => 'btn btn-mini btn-success' %>&nbsp;

  <%= link_to 'Delete', recipe_path(recipe), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %></h5>

</div>
