<div class = "ingredient_container">
  <sidebar>

    <h6><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_ingredient_path(ingredient), :class => 'btn btn-mini btn-success' %>&nbsp;

    <%= link_to 'Delete', ingredient_path(ingredient), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %></h6>

    <h4><%= ingredient.name %></h4>

    <p><strong>Quantity:</strong> <%= ingredient.amount %> <%= ingredient.unit %>
    <br><br></p>

  </sidebar>

  <%= image_tag(ingredient.photo.thumb.url) %>
  <br><br>
  <h5><%= link_to 'Ingredient Found In Which Recipes?', ingredient, :class => 'btn' %></h5>

</div>